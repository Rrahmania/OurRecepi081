/* src/components/HeroCarousel.css */

.hero-carousel-container {
    position: relative;
    width: 100%;
    max-width: 1200px; /* Sesuaikan lebar maksimal carousel */
    margin: 20px auto;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

.carousel-track {
    display: flex;
    transition: transform 0.7s ease-in-out; /* Transisi slide */
}

.carousel-slide {
    min-width: 100%;
    flex-shrink: 0;
    position: relative;
    height: 400px; /* Tinggi setiap slide */
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
}

.carousel-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Pastikan gambar mengisi seluruh slide */
    filter: brightness(70%); /* Sedikit redupkan gambar agar teks lebih jelas */
}

.slide-content {
    position: absolute;
    z-index: 2;
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.3); /* Background gelap transparan untuk teks */
    border-radius: 8px;
}

.slide-content h2 {
    font-size: 2.5em;
    margin-bottom: 10px;
    color: #FFD700; /* Kuning untuk judul */
}

.slide-content p {
    font-size: 1.2em;
    line-height: 1.5;
    color: white;
}

/* --- Navigasi (Panah) --- */
.carousel-control {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    padding: 15px 18px;
    cursor: pointer;
    font-size: 1.5em;
    border-radius: 50%;
    z-index: 3;
    transition: background-color 0.3s;
}

.carousel-control:hover {
    background-color: rgba(0, 0, 0, 0.7);
}

.carousel-control.prev {
    left: 15px;
}

.carousel-control.next {
    right: 15px;
}

/* --- Indikator Dot --- */
.carousel-dots {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 3;
}

.dot {
    width: 12px;
    height: 12px;
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.3s;
}

.dot.active {
    background-color: #FFD700; /* Kuning untuk dot aktif */
    transform: scale(1.2);
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .carousel-slide {
        height: 300px;
    }
    .slide-content h2 {
        font-size: 1.8em;
    }
    .slide-content p {
        font-size: 1em;
    }
    .carousel-control {
        padding: 10px 13px;
        font-size: 1.2em;
    }
}

@media (max-width: 480px) {
    .carousel-slide {
        height: 250px;
    }
    .slide-content h2 {
        font-size: 1.5em;
    }
    .slide-content p {
        font-size: 0.9em;
    }
    .carousel-dots {
        bottom: 10px;
    }
    .dot {
        width: 10px;
        height: 10px;
    }
}
