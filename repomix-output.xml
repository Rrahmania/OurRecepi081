        ) : (
          <>
            <li className="username">üëã Halo, {user.name}</li>
            <li><Link to="/" onClick={toggleMenu}>Home</Link></li>
            <li><Link to="/kategori" onClick={toggleMenu}>Kategori</Link></li>
            <li><Link to="/favorite" onClick={toggleMenu}>Favorite</Link></li>
            <li>
